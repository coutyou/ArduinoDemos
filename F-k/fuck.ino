void setup()
{
   //循环定义行列PIN 为输出模式
  for(int i = 0;i<8;i++)
  {
    pinMode(Row[i],OUTPUT);
    pinMode(Col[i],OUTPUT);
  }
}
 
void loop()
{
  for(int i = 0 ; i < 50 ; i++)        
  {
    Display(F);                  
  }
  for(int i = 0 ; i < 50 ; i++)         
  {   
    Display(U);                 
  }
