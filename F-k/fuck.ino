  }
}
 
void Display(unsigned char dat[8][8])   //显示函数
{
  for(int c = 0; c<8;c++)
  {
    digitalWrite(Col[c],LOW);//选通第c列
 
    //循环
    for(int r = 0;r<8;r++)
    {
      digitalWrite(Row[r],dat[r][c]);
    }
    delay(1);
    Clear();  //清空显示去除余晖
  }
}
 
void Clear()                          //清空显示
{
  for(int i = 0;i<8;i++)
  {
    digitalWrite(Row[i],LOW);
    digitalWrite(Col[i],HIGH);
  }
}
